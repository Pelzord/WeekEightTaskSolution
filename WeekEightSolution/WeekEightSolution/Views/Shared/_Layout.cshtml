<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WeekEightSolution</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/font-awesome/css/all.min.css" />
    <script src="~/font-awesome/js/all.js"></script>
    <script src="~/font-awesome/js/brands.js"></script>
</head>
<body>
    <header>
         <nav class="navbar">
            <div class="content">
              <div class="logo">
                <a href="#">CarVenture</a>
              </div>
                  <ul class="menu-list">
                    <div class="icon cancel-btn">
                      <i class="fas fa-times"></i>
                    </div>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Cars</a></li>
                    <li><a href="#">Offers</a></li>
                    <li><a href="#">Locations</a></li>
                    <li><a href="#">Contacts</a></li>
                    <li><button class="signup-button" onclick="@("window.location.href='" + @Url.Action("SignIn", "User") + "'");">Sign Up</button></li>
                  </ul>
              <div class="icon menu-btn">
                <i class="fas fa-bars"></i>
              </div>
            </div>
          </nav>
    </header>
    <div class="con">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer >
       <div class="footer-wrapper">
                     <div class="grid-container">
                        <div class="grid-links">
                            <h2>CarVenture</h2>
                            <ul>
                                <li>About Us</li>
                                <li>Career</li>
                               
                            </ul>
                        </div>
                         <div class="grid-links">
                             <h3>Company</h3>
                             <ul>
                                 <li>About Us</li>
                                 <li>Career</li>
                                 <li>Support</li>
                                 <li>Trems and Conditions</li>
                             </ul>
                         </div>
                         <div class="grid-links">
                            <h3>Features</h3>
                            <ul>
                                <li>Vehicle Tracker</li>
                                <li>iOS and Android App</li>
                                <li>Business Trip</li>
                                <li>Locations</li>
                            </ul>
                        </div>
                        <div class="grid-links">
                            <h3>Contact Us</h3>
                            <h4>info@teamapp.com</h4>
                            <h4>(302) 555-0107</h4>
                            <h4> 2972 Westheimer Rd. Santa<br> Ana, Illinois 85486 </h4>
                        </div>
                        <div class="grid-links">
                            <h3>Get Deals and Discount</h3>
                            <form action="act">
                                <a href="#">Subscribe to our Newsletter</a><br>
                               <input type="text" placeholder="Email">
        
                            </form>
                        </div>
                        
                     </div>
                     <p>&copy; Copyright Team Inc.<p/>
                 </div>
                
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
